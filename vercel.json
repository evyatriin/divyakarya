{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "server/**"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/debug",
            "destination": "/api/debug.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.js"
        }
    ]
}